<?xml version="1.0" encoding="utf-8"?>
<ScrollView

    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"

    android:background="@android:color/white"
    android:id="@+id/ScrollView"
    android:layout_height="match_parent">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:background="@android:color/white"
        android:id="@+id/profile">

        <com.parse.ParseImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/ahmed"
            android:id="@+id/imageView"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Large Text"
            android:background="@android:color/white"
            android:textColor="#0099CC"
            android:gravity="center"
            android:typeface="serif"
            android:textSize="25sp"

            android:id="@+id/NameOnPRo"
            android:layout_toStartOf="@+id/imageView"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_alignBottom="@+id/imageView" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/PhoneImage"
            android:background="@null"
            android:layout_below="@+id/NameOnPRo"
            android:src="@drawable/phone_100"
            android:onClick="onPhoneClick"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="0522824228"
            android:id="@+id/Phone"
            android:background="@android:color/white"
            android:textColor="#0099CC"
            android:gravity="center"
            android:layout_below="@+id/imageView"
            android:layout_alignBottom="@+id/PhoneImage"
            android:layout_alignRight="@+id/EmailImage"
            android:layout_toEndOf="@+id/PhoneImage" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/EmailImage"
            android:src="@drawable/message_outline_100"
            android:layout_above="@+id/RateThis"
            android:layout_centerHorizontal="true"
            android:onClick="onSendMailClick"
            />

        <TextView
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Large Text"
            android:id="@+id/Email"
            android:background="@android:color/white"
            android:textColor="#0099CC"
            android:gravity="center"
            android:layout_below="@+id/imageView"
            android:layout_alignParentEnd="true"
            android:layout_toEndOf="@+id/EmailImage"
            android:layout_alignBottom="@+id/EmailImage" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Large Text"
            android:id="@+id/RateThis"
            android:background="@android:color/white"
            android:gravity="center"
            android:textColor="#0099CC"
            android:layout_below="@+id/PhoneImage"
            android:layout_alignBottom="@+id/ratingBar"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@+id/ratingBar" />
        <RatingBar
            android:id="@+id/ratingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:numStars="5"
            android:background="@android:color/white"
            android:stepSize="1.0"
            android:rating="2.0"
            android:layout_below="@+id/Phone"
            android:layout_toStartOf="@+id/imageButton2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/Transparent"
            android:background="@android:color/white"
            android:layout_below="@+id/Email"
            android:layout_toEndOf="@+id/ratingBar" />
        <android.support.v4.view.ViewPager
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/pager"
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:layout_below="@+id/RateThis"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true" />

        <ImageButton
            android:layout_width="50dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/thumbs_up_64"
            android:background="@null"
            android:layout_height="50dp"
            android:id="@+id/imageButton2"
            android:layout_alignTop="@+id/Transparent"
            android:layout_alignEnd="@+id/Email" />
        <!---->
    </RelativeLayout>
</ScrollView>