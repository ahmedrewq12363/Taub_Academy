<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:id="@+id/MyProfileFragment"
    android:background="#EDE7F6">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="37dp"
        android:text="Submit"
        android:id="@+id/submit"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_gravity="right"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:background="#B39DDB"
        android:textColor="#311B92"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/submit"
        >

        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/personal_card"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"

            card_view:cardCornerRadius="10dp"
            android:layout_marginTop="30dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="#D1C4E9">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_marginTop="5dp"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Personal Details"
                    android:id="@+id/personal_details"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true"
                    android:textColor="#311B92"
                    android:layout_margin="3dp"
                    />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Name : "
                        android:id="@+id/name"
                        android:textColor="#311B92"
                        android:layout_margin="3dp"
                        android:layout_below="@+id/personal_details"/>
                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Name"
                        android:id="@+id/name_edit"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Phone-Number : "
                        android:id="@+id/phonenumber"

                        android:textColor="#311B92"
                        android:layout_margin="3dp"
                        android:layout_below="@+id/name"/>
                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Phone"
                        android:id="@+id/phone_edit"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Email : "
                        android:id="@+id/email"

                        android:textColor="#311B92"
                        android:layout_margin="3dp"
                        android:layout_below="@+id/phonenumber"/>


                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Email"
                        android:id="@+id/email_edit"
                        />
                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/be_teacher_card"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            card_view:cardCornerRadius="10dp"
            android:layout_above="@+id/submit"
            android:layout_alignParentStart="true"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="#D1C4E9">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Be a Tutor  "
                    android:textColor="#311B92"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true"
                    android:id="@+id/be_tutor"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Choose a course for tutoring :     "
                        android:id="@+id/choose_course"
                        android:textColor="#311B92"
                        android:layout_margin="3dp"
                        android:layout_below="@+id/be_tutor"/>

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Courses"
                        android:id="@+id/courses_button"
                        android:layout_centerVertical="true"

                        />
                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Choose prefered time for tutoring :     "
                    android:id="@+id/choose_time"
                    android:textColor="#311B92"
                    android:layout_margin="3dp"
                    android:layout_below="@+id/choose_course"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:id="@+id/Sunday"
                    android:layout_below="@+id/choose_time"
                    android:orientation="horizontal">
                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sunday"
                        android:id="@+id/Sunday_checkbox"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="#311B92"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" Between "

                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="#311B92"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="12:00"
                        android:onClick="showTimePickerDialog"
                        android:id="@+id/sunday_start_time"
                        style="@android:style/Widget.Holo.Spinner"
                        android:textAppearance="?android:attr/textAppearanceMedium"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" And "
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="#311B92"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="12:00"
                        style="@android:style/Widget.Holo.Spinner"
                        android:onClick="showTimePickerDialog"
                        android:textAppearance="?android:attr/textAppearanceMedium"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:id="@+id/Monday"
                    android:layout_below="@+id/choose_time"
                    android:orientation="horizontal">
                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Monday"
                        android:id="@+id/Monday_checkbox"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="#311B92"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" Between "

                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="#311B92"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="12:00"
                        android:onClick="showTimePickerDialog"
                        android:id="@+id/Monday_start_time"
                        style="@android:style/Widget.Holo.Spinner"
                        android:textAppearance="?android:attr/textAppearanceMedium"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" And "
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="#311B92"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="12:00"
                        android:id="@+id/Monday_end_time"
                        style="@android:style/Widget.Holo.Spinner"
                        android:onClick="showTimePickerDialog"
                        android:textAppearance="?android:attr/textAppearanceMedium"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:id="@+id/Tuesday"
                    android:layout_below="@+id/choose_time"
                    android:orientation="horizontal">
                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tuesday"
                        android:id="@+id/Tuesday_checkbox"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="#311B92"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" Between "

                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="#311B92"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="12:00"
                        android:onClick="showTimePickerDialog"
                        android:id="@+id/Tuesday_start_time"
                        style="@android:style/Widget.Holo.Spinner"
                        android:textAppearance="?android:attr/textAppearanceMedium"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" And "
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="#311B92"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="12:00"
                        android:id="@+id/Tuesday_end_time"
                        style="@android:style/Widget.Holo.Spinner"
                        android:onClick="showTimePickerDialog"
                        android:textAppearance="?android:attr/textAppearanceMedium"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:id="@+id/Wednesday"
                    android:layout_below="@+id/choose_time"
                    android:orientation="horizontal">
                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Wednesday"
                        android:id="@+id/Wednesday_checkbox"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="#311B92"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" Between "

                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="#311B92"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="12:00"
                        android:onClick="showTimePickerDialog"
                        android:id="@+id/Wednesday_start_time"
                        style="@android:style/Widget.Holo.Spinner"
                        android:textAppearance="?android:attr/textAppearanceMedium"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" And "
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="#311B92"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="12:00"
                        android:id="@+id/Wednesday_end_time"
                        style="@android:style/Widget.Holo.Spinner"
                        android:onClick="showTimePickerDialog"
                        android:textAppearance="?android:attr/textAppearanceMedium"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:id="@+id/Thursday"
                    android:layout_below="@+id/choose_time"
                    android:orientation="horizontal">
                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Thursday"
                        android:id="@+id/Thursday_checkbox"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="#311B92"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" Between "

                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="#311B92"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="12:00"
                        android:onClick="showTimePickerDialog"
                        android:id="@+id/Thursday_start_time"
                        style="@android:style/Widget.Holo.Spinner"
                        android:textAppearance="?android:attr/textAppearanceMedium"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" And "
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="#311B92"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="12:00"
                        android:id="@+id/Thursday_end_time"
                        style="@android:style/Widget.Holo.Spinner"
                        android:onClick="showTimePickerDialog"
                        android:textAppearance="?android:attr/textAppearanceMedium"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:id="@+id/Friday"
                    android:layout_below="@+id/choose_time"
                    android:orientation="horizontal">
                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Friday"
                        android:id="@+id/Friday_checkbox"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="#311B92"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" Between "

                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="#311B92"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="12:00"
                        android:onClick="showTimePickerDialog"
                        android:id="@+id/Friday_start_time"
                        style="@android:style/Widget.Holo.Spinner"
                        android:textAppearance="?android:attr/textAppearanceMedium"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" And "
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="#311B92"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="12:00"
                        android:id="@+id/Friday_end_time"
                        style="@android:style/Widget.Holo.Spinner"
                        android:onClick="showTimePickerDialog"
                        android:textAppearance="?android:attr/textAppearanceMedium"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:id="@+id/Saturday"
                    android:layout_below="@+id/choose_time"
                    android:orientation="horizontal">
                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Saturday"
                        android:id="@+id/Saturday_checkbox"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="#311B92"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" Between "

                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="#311B92"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="12:00"
                        android:onClick="showTimePickerDialog"
                        android:id="@+id/Saturday_start_time"
                        style="@android:style/Widget.Holo.Spinner"
                        android:textAppearance="?android:attr/textAppearanceMedium"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" And "
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="#311B92"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="12:00"
                        android:id="@+id/Saturday_end_time"
                        style="@android:style/Widget.Holo.Spinner"
                        android:onClick="showTimePickerDialog"
                        android:textAppearance="?android:attr/textAppearanceMedium"/>
                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>

    </LinearLayout>
</RelativeLayout>


